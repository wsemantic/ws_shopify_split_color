<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_shopify_instance_form_split" model="ir.ui.view">
        <field name="name">shopify.instance.form.ws_shopify_split_color</field>
        <field name="model">shopify.instance</field>
        <field name="inherit_id" ref="shopify_instance_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[field[@name='name']]" position="after">
                <group string="Opciones de Mapeo de Shopify">
                    <field name="last_export_product"/>
                    <field name="last_export_stock"/>
                    <field name="split_products_by_color"/>
                    <field name="size_option_position"/>
                    <field name="color_option_position"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
